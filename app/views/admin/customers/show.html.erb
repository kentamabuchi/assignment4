<div class="container-fluid">
    
    <div class ="row">
        <div class="col-md-2 bg-danger">
            <h3 class="mt-5 bg-light rounded-pill text-center">会員情報</h3>
        </div>
        <div class="col-md-5 offset-md-2 py-5">
            <table class="table">
                <tr>
                    <th width="30%">氏名</th>
                    <td>
                        <%= @customer.last_name %> 
                        <%= @customer.first_name %>
                    </td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td>
                        <%= @customer.last_name_kana %> 
                        <%= @customer.first_name_kana %>
                    </td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
                 <tr>
                    <th>会員ステータス</th>
                    <td>
                        <% if @customer.is_active == true %>
                        有効
                        <% elsif @customer.is_active == false %>
                        退会
                        <% end %>
                    </td>
                </tr>
                
            </table>
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>