<div class="container-fluid">
    
    <div style="height:500px;" class ="row">
        <div class="col-md-2 offset-md-1 bg-danger">
            <h3 class="mt-5 bg-light rounded-pill text-center">商品詳細</h3>
        </div>
        <div class="col-md-3 pt-5 mt-5">
            <%= attachment_image_tag @item, :image, :fill, 300, 300 %>
        </div>
        <div class="col-md-4 mt-5">
            <table class="table">
                <tr>
                    <th>商品名</th>
                    <td><%= @item.name %></td>
                </tr>
                <tr>
                    <th>商品説明</th>
                    <td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <th>ジャンル</th>
                    <td></td>
                </tr>
                <tr>
                    <th>
                       税込価格<br/>
                       (税抜価格)
                    </th>
                    <td>
                       <%= (@item.price*1.1).floor %><span class="pl-1">(</span><%=  @item.price %><span>)</span>
                    </td>
                </tr>
                <tr>
                   <th>販売ステータス</th>
                   <td><%= @item.is_active %></td>
                </tr>
            </table>
            <div class="text-center">
                <%= link_to "戻る", admin_items_path, class:"btn btn-primary" %>
                <%= link_to "編集する", edit_admin_item_path, class:"btn btn-warning" %>
            </div>
            
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>