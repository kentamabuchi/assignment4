<div class="container-fluid">
    <div class="row ">
        <div class="col-md-2 offset-md-1 bg-danger">
            <h3 class="mt-5 bg-light rounded-pill text-center">商品一覧</h3>
        </div>
        <div class="col-md-6 offset-md-1 py-5">
            
            <%= link_to new_admin_item_path, class: "d-flex flex-row-reverse pb-3" do %>
                <i class="far fa-plus-square fa-2x"></i>
            <% end %>
            
       <table class="table">
            <tr>
               <th>商品ID</th>
               <th>商品名</th>
               <th>税抜価格</th>
               <th>ジャンル</th>
               <th>ステータス</th>
            </tr>
            <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td>
                        <%= link_to admin_item_path(item), class: "btn btn-dark" do %>
                            <%= item.name %>
                        <% end %>
                    </td>
                    <td><%= item.price %></td>
                    <td><%= item.genre_id %></td>
                    <td><%= item.is_active %></td>
                </tr>
            <% end %>
       </table>
       <div class="d-flex justify-content-center"><%= paginate @items %></div>
    </div>
</div>