<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <header>
    <nav class="navbar-right">
      <div class="container-fluid bg-danger py-4">
        <div class="row bd-highlight py-3" style="background-color: white; width:1000px,">
          <div class="col-md-3 bg-dark rounded-pill pl-3">
            <%= link_to root_path, class: "text-white text-decoration-none" do %>
              <h1>Nagano Cake</h1>
            <% end %>
          </div>
          <% if customer_signed_in? %>
            <div class="col-md-5 offset-md-4">
              <ul class="nav navbar-right nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                  <%= link_to mypage_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-house-user"></i> マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to items_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-cheese"></i> 商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to cart_items_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-shopping-cart"></i> カート
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-sign-out-alt"></i>　ログアウト
                  <% end %>
                </li>
              </ul>
            </div>
          <% elsif admin_signed_in? %>
            <div class="col-md-6 offset-md-3">
              <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                  <%= link_to admin_items_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-cheese"></i> 商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_customers_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fab fa-readme"></i>　会員一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_top_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fab fa-readme"></i>　注文一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_genres_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-file-signature"></i> ジャンル一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link bg-dark text-white rounded-pill" do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                  <% end %>
                </li>
              </ul>
            </div>
          <% else %>
            <div class="col-md-5 offset-md-4">
              <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                  <%= link_to about_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fab fa-readme"></i>　About
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to items_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-cheese"></i> 商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_registration_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-file-signature"></i> 新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_session_path, class: "nav-link bg-dark text-white rounded-pill" do %>
                    <i class="fas fa-sign-in-alt"></i> ログイン
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
  <fotter>
    <div class="py-4 bg-danger text-center">
      <h5 style=" background-color: white;" class="py-1" >©copy-right︎</h5>
    </div>
  </fotter>
</html>
