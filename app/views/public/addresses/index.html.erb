<div class="container-fluid">
    
    <div style="height: 500px;" class ="row">
        
        <div class="col-md-2 offset-md-1 bg-danger">
           <h3 class="mt-5 bg-light rounded-pill text-center">配送先一覧</h3> 
        </div>
        
        <div class="col-md-6 mt-5 ml-5">
            <div class="row">
                <%= form_with model: @address, url: addresses_path, local: true do |f| %>
                    <table class="table table-borderless">
                        <tr>
                            <th width="30%"><%= f.label "郵便番号" %></th>
                            <td><%= f.text_field :postal_code %></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th width="30%"><%= f.label :"住所" %></th>
                            <td><%= f.text_field :address, size: 40 %></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th width="30%"><%= f.label :"宛名" %></th>
                            <td><%= f.text_field :name %></td>
                            <td><%= f.submit "登録", class: "btn btn-primary" %></td>
                        </tr>
                    </table>
                <% end %>
            </div>
        
            <div class="row">
                <table width="80%"class="table table-bordered">
                    <tr width="80%" class="table-warning">
                        <th width="30%">郵便番号</th>
                        <th>住所</th>
                        <th width="20%">宛名</th>
                        <th></th>
                    </tr>
                    <% @addresses.each do |address| %>
                    <tr>
                        <td><%= address.postal_code %></td>
                        <td><%= address.address %></td>
                        <td><%= address.name %></td>
                        <td>
                            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
                            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
                        </td>
                    </tr>
                    <% end %>
                </table>
            </div>
            <%= paginate @addresses %>
        </div>

    </div>
    
</div>