<div class="container-fluid">
    
    <div class ="row">
        
        <div class="col-md-2 bg-danger">
           <h3 class="mt-5 mb-4 bg-light rounded-pill text-center">配送先編集</h3> 
        </div>
        
        <div class="col-md-7 my-5">
            <div class="row">
                <%= form_with model: @address, url: address_path, local: true do |f| %>
                    <table class="table">
                        <tr>
                            <th width="30%"><%= f.label "郵便番号" %></th>
                            <td><%= f.text_field :postal_code %></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th width="30%"><%= f.label :"住所" %></th>
                            <td><%= f.text_field :address %></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th width="30%"><%= f.label :"宛名" %></th>
                            <td><%= f.text_field :name %></td>
                            <td><%= f.submit "変更内容を保存" %></td>
                        </tr>
                    </table>
                <% end %>
            </div>
        </div>

        <div class="col-md-1 bg-warning"></div>
        <div class="col-md-1 bg-light"></div>
        <div class="col-md-1 bg-danger"></div>
    </div>
    
</div>